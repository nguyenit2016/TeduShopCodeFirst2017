@model NUI.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
    var demLastestProduct = 0;
    var demTopSaleProduct = 0;
    string classProduct = "";
}

@section footerJS{
    <script src="/Assets/client/js/jquery.wmuSlider.js"></script>
    <script>
        $('.example1').wmuSlider();
    </script>
}
<div class="shoes-grid">
    <a href="single.html">
        <div class="wrap-in">
            <div class="wmuSlider example1 slide-grid">
                <div class="wmuSliderWrapper">
                    @foreach (var slide in Model.Slides)
                    {
                        <article style="position: absolute; width: 100%; opacity: 0;">
                            <div class="banner-matter">
                                <div class="col-md-5 banner-bag">
                                    <img class="img-responsive " src="@slide.Images" alt="@slide.Name" />
                                </div>
                                <div class="col-md-7 banner-off">
                                    @Html.Raw(slide.Content)
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        </article>
                    }
                </div>
    </a>
    <ul class="wmuSliderPagination">
        @for (int i = 0; i < Model.Slides.Count(); i++)
        {
            <li><a href="#" class="">@i</a></li>
        }
    </ul>
</div>

@section homeProducts{
    <div class="shoes-grid-left">
        <a href="single.html">
            <div class="col-md-6 con-sed-grid">
                <div class="elit-grid">
                    <h4>consectetur  elit</h4>
                    <label>FOR ALL PURCHASE VALUE</label>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, </p>
