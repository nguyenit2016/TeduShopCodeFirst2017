@model NUI.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
<div class="account_grid">
    <div class="login-right">
        <h3>Đăng nhập</h3>
        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <div>
                <span>Tài khoản<label class="required-label">*</label></span>
                @Html.TextBoxFor(m => m.UserName)
            </div>
            <div>
                <span>Mật khẩu<label class="required-label">*</label></span>
                @Html.TextBoxFor(m => m.Password)
            </div>
            <div>
                @Html.CheckBoxFor(m => m.RememberMe) Nhớ mật khẩu?
            </div>
            <a class="forgot" href="#">Quên mật khẩu?</a>
            <input type="submit" value="Đăng nhập">
        }
    </div>
    <div class="login-left">
        <h3>Đăng ký tài khoản</h3>
        <p>Tạo tài khoản nếu bạn chưa có?</p>
        <a class="acount-btn" href="/dang-ky.html">Tạo tài khoản</a>
    </div>
    <div class="clearfix"> </div>
</div>